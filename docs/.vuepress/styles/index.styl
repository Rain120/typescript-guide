#app {
  .page {
    #gitalk-container {
      margin: auto;
      width: 60%;
    }
		.theme-default-content:not(.custom) {
			max-width: 840px;
		}
  }

	.page-nav, .page-edit {
		max-width: 840px;
	}

	details {
    border-radius: 4px;
    padding: .5em .5em;
		&:focus {
			outline: none;
		}
	}

	summary {
    font-weight: bold;
    margin: -.5em -.5em;
    margin-bottom: .8em;
		&:focus {
			outline: none;
		}
	}

	code {
		background: none;
	}

	.theorem {
		margin: 1rem 0;
		padding: .1rem 1.5rem;
		border-radius: 0.4rem;
		background-color: #f0f4f8;
		.title {
			font-weight: bold;
		}
	}

	.custom-block {
		&.right {
			color: transparentify($textColor, 0.4);
			font-size: 0.9rem;
			text-align: right;
		}
	}
}

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
  border-radius: 10px;
  background-color: #F5F5F5;
}

::-webkit-scrollbar-track {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
  background-color: #F5F5F5;
}

::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
  border-radius: 10px;
  background-image: -webkit-gradient(
    linear,
    left bottom, left top,
   color-stop(.44, rgb(60, 186, 146)),
   color-stop(.72, rgb(253, 187, 45)),
   color-stop(.86, rgb(253, 187, 45))
  );
  transition: .3s ease-in-out;
}

::-webkit-scrollbar-thumb:hover {
  background-image: -webkit-gradient(
    linear,
    left bottom, left top,
    color-stop(.44, rgb(253, 187, 45)),
    olor-stop(.72, rgb(253, 187, 45)),
    color-stop(.86, rgb(60, 186, 146))
  );
  transition: .3s ease-in-out;
}
